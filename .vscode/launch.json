            "env": {
                "PYTHONDONTWRITEBYTECODE": "1",
                "LOAD_ON_START": "true",
                "TRANSFORMERS_CACHE": "/home/crivella/app/AI",
                "TRANSFORMERS_ALLOW_CACHE": "true",
                "TRANSFORMERS_OFFLINE": "1",
