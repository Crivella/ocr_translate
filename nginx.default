server {
    listen 4000;
    server_name example.org;
    client_max_body_size 100M;

    location / {
        proxy_pass http://127.0.0.1:4010;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    location /static {
        root /opt/app;
    }
    location /media {
        root /opt/app;
    }
}